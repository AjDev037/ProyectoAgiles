<?xml version="1.0" encoding="utf-8"?>
<!--android:onClick="pruebaSwipe -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".Clases.GenerarClase"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clase: Metodos Agiles"
            android:textSize="30dp"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="?android:attr/listDivider" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hito"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:layout_margin="10dp" />

        <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text=""
                android:hint="Ingrese un hito o mensaje para la clase..."
                android:textColorHint="@color/hint"
                android:layout_margin="10dp"/>

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?android:attr/listDivider" />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/btnActualizar"
                android:text="Actualizar Clase"
                android:layout_marginHorizontal="50dp"
                android:layout_gravity="center"/>

        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="?android:attr/listDivider" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_margin="10dp">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/btnLogin"
                android:text="Tomar Asistencia"
                android:layout_marginHorizontal="30dp"/>


    </LinearLayout>


</LinearLayout>